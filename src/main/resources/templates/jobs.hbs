{{#partial "content"}}
    <h1>Jobs</h1>
    <div class="jobs-container widget-container">
    {{#each jobs}}
        <div class="job-widget widget job-widget-status-{{status}}">
            <a href="jobs/{{name}}" class="job-name">{{name}}</a>
            {{#if latestBuild}}
                {{#ifGreaterThan latestBuild/testStatistics/failed 0}}
                    <span class="failed-tests-count">{{latestBuild/testStatistics/failed}}</span>
                {{/ifGreaterThan}}
            {{/if}}
        </div>
    {{/each}}
    </div>

{{/partial}}

{{> base}}